{
  "root": true,
  "env": {
    "browser": true,
    "es2022": true,
    "node": true,
    "worker": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "prefer-const": "error",
    "no-var": "error",
    "no-console": "warn",
    "eqeqeq": "error",
    "curly": "error",
    "no-async-promise-executor": "error",
    "no-unused-vars": ["error", { 
      "argsIgnorePattern": "^_", 
      "varsIgnorePattern": "^_", 
      "args": "after-used",
      "ignoreRestSiblings": true 
    }]
  },
  "ignorePatterns": [
    "dist",
    "node_modules",
    "FSK",
    "*.js"
  ]
}